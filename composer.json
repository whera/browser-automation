{
    "name": "wsw/browser-automation",
    "description": "Scenario-based browser automation",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronaldo Matos Rodrigues",
            "email": "ronaldo@whera.com.br"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php" : "^7.2",
        "facebook/webdriver": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "WSW\\BrowserAutomation\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WSW\\BrowserAutomationTest\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "phpunit/php-code-coverage": "^7.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
